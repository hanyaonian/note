{
  "name": "pnpm-boilerplate",
  "version": "1.0.0",
  "description": "pnpm monoprepo project boilerplate",
  "scripts": {
    "dev": "pnpm --parallel --filter './packages/**' dev",
    "lint": "pnpm --parallel --filter './packages/**' lint",
    "format": "pnpm --parallel --filter './packages/**' format",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm exec eslint --fix",
      "pnpm exec prettier --write"
    ],
    "*.{css,scss,sass}": [
      "pnpm exec stylelint",
      "pnpm exec prettier --write"
    ],
    "*.{json,md}": "pnpm exec prettier --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.33.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.39.1"
  }
}
